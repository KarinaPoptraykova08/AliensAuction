@model IEnumerable<AliensStore.Data.Entity.Alien>

@{
    ViewData["Title"] = "New Lifeform";
}
@section Styles {
    <link rel="stylesheet" href="/css/indexalien.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;1,300&display=swap" rel="stylesheet">
}

<h1>New Lifeform? No Problem.</h1>
<div class="backtolist mt-3">
<p>
    <a asp-action="Create">Create Alien</a>
</p>
</div>
    <div class="wrapper">   
    <div class="lodinbox">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoinsPerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Legs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eyes)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IsForSale)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Planet)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Dealer)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoinsPerDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Legs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eyes)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.IsForSale)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Planet.Id)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Dealer.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </div>
        </div>
    </tbody>
</table>
