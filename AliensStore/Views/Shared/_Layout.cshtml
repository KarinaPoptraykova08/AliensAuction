﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ObjectNotFromEarth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AliensStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_Layout.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/_Layout.cshtml.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;1,300&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>

        <nav class="navbar">
            <div class="container-fluid d-flex justify-content-between align-items-center w-100">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/photos/404_logo.png" style="height: 70px;" />
                </a>
                <ul class="navbar-nav d-flex flex-row gap-3 mb-0">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>
    

      <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
