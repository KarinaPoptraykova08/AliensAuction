@page
@model RegisterModel
@{
    ViewData["Title"] = "Oh wow, registering? Shocking. Who wouldn’t want to join a totally legal, absolutely not suspicious intergalactic marketplace?";
}
@section Styles {
    <link rel="stylesheet" href="/css/register.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;1,300&display=swap" rel="stylesheet">
}

<h1>@ViewData["Title"]</h1>
<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
    @Html.AntiForgeryToken()

    <div class="wrapper">   
        <div class="lodinbox">
            <div class="loginheader">
                <span>Register</span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input_box">
                <input asp-for="Input.Email" class="input-field" required />
                <label asp-for="Input.Email" class="label">E-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <i class="bx bx-user icon"></i>
            </div>

            <div class="input_box">
                <input asp-for="Input.Password" class="input-field" required />
                <label asp-for="Input.Password" class="label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <i class="bx bx-lock-alt icon"></i>
            </div>

            <div class="input_box">
                <input asp-for="Input.ConfirmPassword" class="input-field" required />
                <label asp-for="Input.ConfirmPassword" class="label">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <i class="bx bx-lock-alt icon"></i>
            </div>

            <!-- Role dropdown (optional, must be handled in the code-behind) -->
            <div class="select-menu">
                <select class="input-field" name="role">
                    <option selected disabled>Role</option>
                    <option value="Dealer">Dealer</option>
                    <option value="Mothership Manager">Mothership Manager</option>
                </select>
            </div>

            <div class="remember-forgot">
                <div class="remember-me">
                    <input type="checkbox" id="remember">
                    <label for="remember">Remember me</label>
                </div>
            </div>

            <div class="input_box">
                <input type="submit" class="input-submit" value="Register" />
            </div>

            <div class="register">
                <span>Already have an account? <a asp-page="./Login">Login</a></span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
